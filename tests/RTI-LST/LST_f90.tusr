    subroutine usrdat2()  ! This routine to modify mesh coordinates
    use size_m
    implicit none

    real :: rayleigh, atwood, amp0, delta
    integer :: kmax, kmin

    common /myvalues/ rayleigh, atwood, kmax, kmin, amp0, delta

    atwood = {atwood}
    kmax = {kmax}
    kmin = {kmin}
    amp0 = {amp0}
    rayleigh = 9.8
    delta = 0.25 * ({extent_mesh[2]} - ({root_mesh[2]})) / ({shape_mesh[2]})

    return
